<%- include('../partials/header') %>
  <h2>
    <%= title %>
  </h2>
  <table>
    <thead>
      <tr>
        <th>Airline</th>
        <th>Airport</th>
        <th>Flight Number</th>
        <th>Departure</th>
      </tr>
    </thead>
    <tbody>
      <% flights.forEach(function(fn) { %>
        <tr>
          <td><%= fn.airline %></td>
          <td><%= fn.airport %></td>
          <td><%= fn.flightNo %></td>
          <td><%= fn.departs.toLocaleString() %></td>
        </tr>
     <% }); %>
    </tbody>
  </table>
  <%- include('../partials/footer') %>