<%- include('../partials/header') %>
  <form id="new-form" action="/flights" method="POST">
    <label>Airline:
    </label>
    <select name="airline">
      <option value="Alaska" selected>Alaska</option>
      <option value="American">American</option>
      <option value="Delta">Delta</option>
      <option value="United">United</option>
      <option value="Hawaiian">Hawaiian</option>
    </select>
    <label>Departing Airport:</label>
    <select name="airport">
      <option value="DEN">DEN</option>
      <option value="DFW">DFW</option>
      <option value="JFK">JFK</option>
      <option value="LAX">LAX</option>
      <option value="SEA" selected>SEA</option>
      <option value="SFO">SFO</option>
    </select>
    <label>Flight Number:</label>
    <input type="text" name="flightNo" value="">
    <label>Departure:</label>
    <input type="datetime-local" name="departs" value="<%= departsDate %>">
    <button type="submit">Add Flight</button>
  </form>
  <p>
    <%= errorMsg %>
  </p>
  <%- include('../partials/footer') %>